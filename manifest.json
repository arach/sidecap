{
  "manifest_version": 3,
  "name": "Captions",
  "description": "Practice speaking by showing captions in the same language or translations on YouTube.",
  "version": "0.2.0",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://m.youtube.com/*"
      ],
      "js": ["extension/content.js"],
      "css": ["extension/styles.css"],
      "run_at": "document_idle"
    }
  ]
}
